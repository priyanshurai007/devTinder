# Copy this file to `.env` and fill in values before running locally.
# Do NOT commit real secrets to git. Use deployment secrets in Render/Vercel/GitHub instead.

# MongoDB connection URI (use a user with a strong password)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/devTinder

# JWT secret (rotate if leaked)
JWT_SECRET=your_jwt_secret_here

# Port to run the backend on locally
PORT=3000

# Cloudinary credentials for image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Set to 'production' in deployed envs
NODE_ENV=development

# If your frontend is hosted at a specific URL, set it here (comma-separated allowed)
# e.g. FRONTEND_URL=https://devtinder-vqbx.onrender.com,http://localhost:5173
FRONTEND_URL=

# If you use a custom embedding service, put it here
EMBEDDING_API_URL=

# If deploying to Render (or similar), set this to true so cookies are set as Secure/SameSite=None
RENDER=false
